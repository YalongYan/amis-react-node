{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"]
    },
    "esModuleInterop": true
  },
  "include": ["mock", "src", ".umirc.ts", "typings.d.ts"],
  "exclude": ["node_modules", "lib", "es", "dist", "typings", "**/__test__", "test", "docs", "tests"]
}
